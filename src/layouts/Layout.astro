---
import '../css/styles.css'

export interface Props {
	title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/images/hungman.svg" />
		<meta name="generator" content={Astro.generator} />
		<script is:inline src="/node_modules/jquery/dist/jquery.min.js"
		></script>
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<script>
			import '../scripts/app.js'
		</script>
	</body>
</html>
